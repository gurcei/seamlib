K  RETURN'--------.PLOTØCHR'--------  ADDR = $2D800 + CHR * 8  FOR YY = 0 TO 7    VL = PEEK(ADDR)    ADDR = ADDR + 1    Y = TY + YY    X = TX    BANK 0    FOR XX = 7 TO 0 STEP -1      IF (VL AND (2 ^ XX)) <> 0 THEN SYS –Ãœ‘Ø–…ÿ≈Ã, X, Y, TCLR      X = X + 1    NEXT XX    BANK 128  NEXT YY  RETURN'---------------------.PETSCIIØTOØSCREENCODE'---------------------  BANK 0  POKE $7E2A, CHR  SYS $7F2A  CHR = PEEK($7E2A)  BANK 128  RETURN'-----------------.DRAWØHISCOREØLIST'-----------------  'FOR K = 0 TO 3  '  PRINT HSØLEVEL$(K) ; ": "; HSØNAME$(K); " - SCORE: "; HSØSCORE(K)  'NEXT K  TY = 14  FOR IDX = 0 TO 3    TX = 8    TCLR = LVLØCLR(IDX)    A$ = HSØLEVEL$(IDX) + ":"    GOSUB PLOTØTEXT    TY = TY + 8    TX = 16    A$ = HSØNAME$(IDX)    GOSUB PLOTØTEXT    TX = 8 * 10    A$ = STR$(HSØSCORE(IDX))    GOSUB PLOTØTEXT    TY = TY + 12  NEXT IDX  COLOR 10  A$ = "–RESS ANY KEY TO EXIT HIGH SCORE MENU"  CURSOR (80 - LEN(A$)) / 2, 48  PRINT A$;  RETURN'-------------------------.STOREØDEFAULTØHSØCOLOURS'-------------------------  FOR K = 0 TO 15    DEFAULTØHSØRED&(K) = PEEK($D110+K)    DEFAULTØHSØGREEN&(K) = PEEK($D210+K)    DEFAULTØHSØBLUE&(K) = PEEK($D310+K)  NEXT K  RETURN'-----------------------.RESTOREØDEFAULTØHSØCOLOURS'-----------------------  FOR K = 0 TO 15    POKE $D110+K, DEFAULTØHSØRED&(K)    POKE $D210+K, DEFAULTØHSØGREEN&(K)    POKE $D310+K, DEFAULTØHSØBLUE&(K)  NEXT K  RETURN